    begin
        prog   = irexec
        button = KEY_UP
        config = amixer set Headphone 1+
        delay  = 1
        repeat = 1
    end

    begin
        prog   = irexec
        button = KEY_DOWN
        config = amixer set Headphone 1-
        delay  = 1
        repeat = 1
    end

    begin
        prog   = irexec
        button = KEY_LEFT
        config = mpc previous
    end

    begin
        prog   = irexec
        button = KEY_RIGHT
        config = mpc next
    end

    begin
        prog   = irexec
        button = KEY_OK
        config = python /root/pi3/coaxial.py
        config = python /root/pi3/optical.py
        delay  = 2
    end

    begin
        prog   = irexec
        button = KEY_PLAY
        config = mpc toggle
    end

    begin
        prog   = irexec
        button = KEY_MENU
        config = echo 0 >/sys/class/gpio/gpio22/value
        config = echo 1 >/sys/class/gpio/gpio22/value
        delay  = 2
    end
